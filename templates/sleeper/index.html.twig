{% extends 'base.html.twig' %}

{% block title %}Hello SleeperController!
{% endblock %}

{% block body %}

	<body>
		<a class="btn btn-lg btn-primary profilS" href="{{ path('sleeper_edit', {'id': app.user.id}) }}">Mon
									        profil</a>


		<h1>J'ai
			{{ nombreDeRdv }}
			rendez-vous en pr√©vision :
		</h1>
		{% for rdv in mySlots %}
			<img src="/img/separateur.png" alt="separateur">
			<h1>{{ rdv.theBed.name }}</h1>
			<div class="semainier">
				<table class="table rdv">
					<thead>
						<th>Date de rendez-vous</th>
						<th>Heure de rendez-vous</th>
						<th>Vous souhaitez annuler le rendez-vous ?</th>
					</thead>
					<tbody>
						<tr>
							<td>{{ rdv.date|date('Y/d/m') }}</td>
							<td>{{ rdv.time|date('H:i') }}</td>
							<td>
								<a class="btn btn-sm btn-primary" href="{{ path('annuler', { 'idRdv': rdv.id })}}">Annuler</a>
							</td>
						</tr>
					</tbody>
				</table>

			</div>
			<br>
		{% endfor %}
	</body>
{% endblock %}
