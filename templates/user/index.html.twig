{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<h1>User index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Password</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Adress</th>
            <th>Zipcode</th>
            <th>Town</th>
            <th>Phone</th>
            <th>StartTime</th>
            <th>EndTime</th>
            <th>Type</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.surname }}</td>
            <td>{{ user.adress }}</td>
            <td>{{ user.zipcode }}</td>
            <td>{{ user.town }}</td>
            <td>{{ user.phone }}</td>
            <td>{{ user.startTime ? user.startTime|date('H:i:s') : '' }}</td>
            <td>{{ user.endTime ? user.endTime|date('H:i:s') : '' }}</td>
            <td>{{ user.type }}</td>
            <td>
                <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="14">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}